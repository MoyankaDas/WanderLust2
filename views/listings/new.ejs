<% layout("./layouts/boilerplate.ejs") %>

<style>
  body {
    background-color: #f8f9fa;
    color: #212529;
    transition: background-color 0.3s, color 0.3s;
  }

  .dark-mode {
    background-color: #121212 !important;
    color: #e0e0e0 !important;
  }

  .dark-mode .card {
    background-color: #1e1e1e;
    border-color: #333;
    color:white
  }

  .dark-mode .form-control,
  .dark-mode .form-select {
    background-color: #2c2c2c;
    color: #f1f1f1;
    border-color: #444;
  }

  .dark-mode label,
  .dark-mode .form-label {
    color: #ccc;
  }

  .dark-mode .btn-dark {
    background-color: #bb86fc;
    border: none;
  }

  .form-floating label {
    color: #6c757d;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #fe4264;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 100, 0.25);
  }

  .btn-dark {
    background-color: #fe4264;
    border: none;
  }

  .btn-dark:hover {
    background-color: #e93c5d;
  }
</style>

<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-9 col-md-10">
        <div class="card shadow-lg rounded-4 border-0">
          <div class="card-body p-5" style="margin:4rem">
            <h2 class="mb-4 text-center fw-bold">Create a New Listing</h2>
            <form action="/listings" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>

              <div class="form-floating mb-4">
                <input type="text" name="listing[title]" id="title" class="form-control" placeholder="Title" required>
                <label for="title">Title</label>
                <div class="invalid-feedback">Please enter a title.</div>
              </div>

              <div class="form-floating mb-4">
                <textarea name="listing[description]" id="description" class="form-control" placeholder="Description" style="height: 120px" required></textarea>
                <label for="description">Description</label>
                <div class="invalid-feedback">Please enter a short description.</div>
              </div>

              <div class="mb-4">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" id="image" class="form-control" required>
                <div class="invalid-feedback">Please upload an image.</div>
              </div>

              <div class="mb-4">
                <label for="category" class="form-label">Category</label>
                <select name="listing[category]" id="category" class="form-select">
                  <option selected disabled>Select category</option>
                  <option>Trending</option>
                  <option>Rooms</option>
                  <option>Iconic cities</option>
                  <option>Mountain</option>
                  <option>Castles</option>
                  <option>Arctic</option>
                  <option>Camping</option>
                  <option>Farms</option>
                  <option>Pools</option>
                  <option>Domes</option>
                  <option>Boats</option>
                  <option>Forest</option>
                  <option>Beach</option>
                  <option>Others</option>
                </select>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-floating">
                    <input type="number" name="listing[price]" id="price" class="form-control" placeholder="Price" min="0" required>
                    <label for="price">Price (â‚¹)</label>
                    <div class="invalid-feedback">Enter a valid price.</div>
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <div class="form-floating">
                    <input type="text" name="listing[country]" id="country" class="form-control" placeholder="Country" required>
                    <label for="country">Country</label>
                    <div class="invalid-feedback">Enter a valid country name.</div>
                  </div>
                </div>
              </div>

              <div class="form-floating mb-4">
                <input type="text" name="listing[location]" id="location" class="form-control" placeholder="Location" required>
                <label for="location">Location</label>
                <div class="invalid-feedback">Please enter the location.</div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-dark btn-lg rounded-3 mt-3">Submit Listing</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Validation -->
  <script>
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>

 
</body>
